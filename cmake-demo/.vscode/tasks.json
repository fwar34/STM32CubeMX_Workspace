{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-GNinja",
                "-Bbuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "cmake --build build --target all && arm-none-eabi-objcopy -Oihex build/${workspaceFolderBasename}.elf build/${workspaceFolderBasename}.hex && arm-none-eabi-objcopy -Obinary build/${workspaceFolderBasename}.elf build/${workspaceFolderBasename}.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                // "interface/cmsis-dap.cfg",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "program ./build/${workspaceFolderBasename}.elf verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}